
@{
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<h2>Search House</h2>
<br />
<form method="post" action="~/SearchHouse/search">
    Suburb: <input type="text" style="width:200px" name="Suburb" pattern="[a-zA-Z\s]+$" title="Please Input Letters as Suburb" required/>
    PropertyType: <select name="PropertyType" style="width:200px" required>
        <option value="">Select Property Type</option>
        <option Apartment>Apartment</option>
        <option House>House</option>
        <option Lifestyle bare land>Lifestyle bare land</option>
        <option Lifestyle dwelling>Lifestyle dwelling</option>
        <option Section>Section</option>
        <option Townhouse>Townhouse</option>
        <option Unit>Unit</option>
    </select>
    <input type="submit" />
</form>
<br />


